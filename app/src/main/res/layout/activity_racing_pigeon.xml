<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RacingPigeonActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/blue_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BD Racing Pigeon Database"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:background="@drawable/bg_dark_blue"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="cursive"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="9"
        android:gravity="center">

        <Button
            android:id="@+id/btn_SearchPigeon"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Search Pigeon"
            android:layout_margin="10dp"
            android:background="@drawable/pressed_btn_2"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-medium"/>

        <Button
            android:id="@+id/btn_TopPigeon"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Top Pigeon"
            android:layout_margin="10dp"
            android:background="@drawable/pressed_btn_2"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-medium"/>

        <Button
            android:id="@+id/btn_ToFancier"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Top Fancier"
            android:layout_margin="10dp"
            android:background="@drawable/pressed_btn_2"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-medium"/>



    </LinearLayout>

</LinearLayout>