<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10"
    android:background="@drawable/pressed_black_2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:layout_weight="4"
        android:padding="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/IV_supPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/secret_dev_logo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/TV_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="T-Tonic 250ml best of best the best"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/TV_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:text="T-Tonic 250ml best of best the bestT-Tonic 250ml best of best the bestT-Tonic 250ml best of best the best"
            android:padding="2dp"/>


    </LinearLayout>

</LinearLayout>
